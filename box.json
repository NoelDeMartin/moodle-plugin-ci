{
  "compression": "GZ",
  "directories": [
    "src",
    "res"
  ],
  "files": [
    "LICENSE"
  ],
  "finder": [
    {
      "in": "vendor",
      "name": [
        "*.php",
        "*.xml",
        "*.xsd"
      ],
      "exclude": [
        "moodlehq",
        "Tests",
        "tests",
        "test"
      ]
    },
    {
      "in": "vendor/moodlehq",
      "name": [
        "*.php",
        "*.xml",
        "*.sh",
        "*.jar"
      ],
      "exclude": [
        "Tests",
        "tests",
        "Docs",
        "pix"
      ]
    }
  ],
  "compactors": "KevinGH\\Box\\Compactor\\Php",
  "git-version": "package_version",
  "replacements": {
    "is_boxed": "BOXED"
  },
  "intercept": true,
  "output": "build/moodle-plugin-ci.phar"
}
